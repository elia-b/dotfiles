#!/bin/bash

if [ "$#" -ne 2 ]; then
    echo "Usage: $0 <text_to_echo> <filename_without_extension>"
    exit 1
fi

TEXT_TO_ECHO=$1
FILENAME=$2

FULL_FILENAME="${FILENAME}.mp3"

FILE_PATH="$HOME/.config/speak/$FULL_FILENAME"

dunstify -u normal "ðŸ—£" "$TEXT_TO_ECHO"

if [ -f "$FILE_PATH" ]; then
    ffplay -nodisp -autoexit -volume 7 "$FILE_PATH" > /dev/null 2>&1
else
    echo "Error: File '$FULL_FILENAME' not found in $SCRIPT_DIR"
    exit 1
fi
